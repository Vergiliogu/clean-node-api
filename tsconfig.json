{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "CommonJS",
    "target": "ES2022",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "baseUrl": "./",
    "rootDir": "./src",
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}